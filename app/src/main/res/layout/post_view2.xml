<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="viewStart">

    <!-- Role name and salary range -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/roleNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role Name"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/salaryRangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary Range" />

    </LinearLayout>

    <!-- Tags -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/tagsFlexboxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"

        app:justifyContent="flex_start"
        app:alignItems="flex_start">

        <!-- Add tags dynamically here -->

    </com.google.android.flexbox.FlexboxLayout>

    <!-- Institute name, employee count, and job location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/instituteNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Institute Name" />

            <TextView
                android:id="@+id/employeeCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Count" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/jobLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Location" />

    </LinearLayout>

    <!-- Post owner details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <circularImageView
            android:id="@+id/postOwnerImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_account_circle_24"
            android:background="@drawable/circular_background"
            android:contentDescription="Post Owner" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/postOwnerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Post Owner Name" />
            <View
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_margin="4dp"
                android:background="@color/black"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/recruiterRoleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recruiter Role" />


        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/recruiterLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recruiter Location" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:maxLines="1"
        android:ellipsize="end"/>
</LinearLayout>
